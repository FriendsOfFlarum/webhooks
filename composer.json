{
    "name": "fof/webhooks",
    "description": "Automatically notify Discord, Slack, and Microsoft Teams when events happen on your Flarum forum.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/webhooks/issues",
        "source": "https://github.com/FriendsOfFlarum/webhooks",
        "forum": "https://discuss.flarum.org/d/17812"
    },
    "homepage": "https://friendsofflarum.org",
    "funding": [
        {
            "type": "opencollective",
            "url": "https://opencollective.com/fof/donate"
        },
        {
            "type": "github",
            "url": "https://github.com/sponsors/dsevillamartin"
        }
    ],
    "require": {
        "flarum/core": "^2.0.0",
        "guzzlehttp/guzzle": "7.*",
        "ssnepenthe/color-utils": "^0.4.2",
        "html2text/html2text": "^4.3.1",
        "charescape/serialize-closure": "^3.8"
    },
    "replace": {
        "reflar/webhooks": "*"
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "authors": [
        {
            "name": "David Sevilla Mart√≠n",
            "email": "me+fof@dsevilla.dev",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "FoF\\Webhooks\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.x-dev"
        },
        "flarum-extension": {
            "title": "FoF Webhooks",
            "category": "feature",
            "icon": {
                "name": "fas fa-external-link-alt",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/tags",
                "flarum/approval"
            ]
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    },
    "require-dev": {
        "flarum/phpstan": "^2.0.0-beta",
        "flarum/tags": "*",
        "flarum/approval": "*"
    }
}
