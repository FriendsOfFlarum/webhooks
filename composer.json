{
    "name": "behzadbabaei/webhooks",
    "description": "Flarum with webhooks",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/behzadbabaei/webhooks/issues",
        "source": "https://github.com/behzadbabaei/webhooks"
    },
    "homepage": "https://behzadbabaei.com/",
    "require": {
        "flarum/core": "^1.7.0",
        "guzzlehttp/guzzle": "7.*",
        "ssnepenthe/color-utils": "^0.4.2",
        "html2text/html2text": "^4.3.1",
        "charescape/serialize-closure": "^3.8",
        "ext-json": "*"
    },
    "replace": {
        "reflar/webhooks": "*"
    },
    "authors": [
        {
            "name": "behzad babaei",
            "email": "behzadbabaei69@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "BeB\\Webhooks\\": "src/",
            "Beb\\Reflar\\Webhooks\\": "src/Legacy"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "BeB Webhooks",
            "category": "feature",
            "icon": {
                "name": "fas fa-external-link-alt",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/tags",
                "flarum/approval"
            ]
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true
            }
        }
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    },
    "require-dev": {
        "flarum/phpstan": "*",
        "flarum/tags": "*",
        "flarum/approval": "*"
    }
}
